<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>2048 Cricketers 2024</title>
  <link rel="stylesheet" href="style.css" />
</head>
<body>
  <div class="game-container">
    <h1 class="glow-title">2048 Cricketers 2024</h1>

    <!-- Scoreboard -->
    <div id="scoreboard">
      <div class="score-box">
        <div id="score">Score: 0</div>
      </div>
      <div class="score-box">
        <div id="best-score">Best: 0</div>
      </div>
      <button id="new-game-btn">New Game</button>
    </div>

    <!-- Grid -->
    <div id="grid-container"></div>
  </div>

  <!-- Game Over Overlay -->
  <div id="game-over-overlay">
    <div class="game-over-box">
      <h2>Game Over</h2>
      <button onclick="restartGame()">Restart</button>
      <button onclick="location.href='https://zextooo.github.io/2048-world/'">Home</button>
    </div>
  </div>

  <script src="game.js"></script>
</body>
</html>
